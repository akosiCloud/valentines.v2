<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            roseSoft: '#fda4af',
            roseDeep: '#be123c'
          }
        }
      }
    }
    tailwind.config = {
          theme: {
              extend: {
                  colors: {
                      valentinePink: "#ff6f91",
                      valentineRed: "#ff4d6d"
                    }
                }
            }
        }
  </script>
    <style>
    .card:hover .overlay {
      opacity: 1;
    }

    /* Overlay fade on card hover */
    .card:hover .overlay {
      opacity: 1;
    }

    /* Smooth background transition */
    #dynamic-bg img {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: blur(20px) brightness(50%);
      transition: opacity 0.6s ease-in-out;
    }
  </style>
</head>
